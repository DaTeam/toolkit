{
    "extends": "../../tsconfig.json",
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "lib",
        "baseUrl": "./",
        "target": "es5",
        "module": "esnext",
        "sourceMap": true,
        "jsx": "react",
        "lib": [
            "dom",
            "esnext"
        ],
        "typeRoots": [
            "src/typings"
        ],
        "declaration": false
    },
    "compileOnSave": true
}